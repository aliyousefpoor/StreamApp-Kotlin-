<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_nav_graph"
    app:startDestination="@id/categoryFragment">
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.streamappkotlin.categorytab.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/category_fragment"
        >
        <action
            android:id="@+id/action_categoryFragment_to_productListFragment"
            app:destination="@id/productListFragment" />
    </fragment>
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.streamappkotlin.productlist.ProductListFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/product_list_fragment"
        >
        <action
            android:id="@+id/action_productListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.streamappkotlin.productDetails.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/product_detail_layout"
        />
</navigation>