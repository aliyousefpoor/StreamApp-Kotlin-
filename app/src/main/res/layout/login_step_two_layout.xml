<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="@string/second_dialog_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/verificationCode"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:hint="@string/second_dialog_hint"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/resendCode"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="@string/second_dialog_text"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/verificationCode" />

    <Button
        android:id="@+id/secondDialogSubmit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/resendCode" />

    <Button
        android:id="@+id/changeNumber"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorPrimary"
        android:text="@string/change_number"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/secondDialogSubmit"
        app:layout_constraintEnd_toStartOf="@id/secondDialogSubmit"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/secondDialogSubmit"

        />


</androidx.constraintlayout.widget.ConstraintLayout>